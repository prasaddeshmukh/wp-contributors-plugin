<?php

function contributors_box_radio() {
	$options = get_option('plugin_options_contributors_box');
	$items = array("above", "below");	
	var_export( get_option('plugin_options_contributors_box') );
	foreach($items as $item) {
		echo $options[0];
		//$checked = ($options['option_set']==$item) ? 'checked = "checked"' : '';
		echo "<label><input  value='$item' name='plugin_options_contributors_box[option_set2]' type='radio'".checked($item == $options['options_set2'])."/> $item</label><br/>";
	}
}

function author_display_radio() {
	$options = get_option('plugin_options');
	$items = array("Yes", "No");
	var_export( get_option('plugin_options_author') );
	foreach($items as $item) {
		//$checked = ($options['option_set2']==$item) ? ' checked="checked" ' : '';
		echo "<label><input  value='$item' name='plugin_options_author[option_set2]' type='radio'".checked($item == $options['options_set2'])."/> $item</label><br/>";
	}
}

// Add sub page to the Settings Menu
function options_add_page() {
	add_options_page('Contributors Plugin Page', 'Contributors Settings', 'administrator', __FILE__, 'contributors_plugin_options_page');
}
add_action('admin_menu', 'options_add_page');

function contributors_plugin_options_page() {
?>
	<div class="wrap">
		<div class="icon32" id="icon-options-general"><br></div>
		<h2>Contributors Plugin Settings</h2>
		
		<form action="options.php" method="post">
		<?php settings_fields('plugin_options_contributors_box'); ?>
		<?php //settings_fields('plugin_options_author'); ?>
		<?php do_settings_sections(__FILE__); ?>
		<p class="submit">
			<input name="Submit" type="submit" class="button-primary" value="<?php esc_attr_e('Save Changes'); ?>" />
		</p>
		</form>
	</div>
<?php
}
add_action('admin_init', 'options_init_fn' );
// Register our settings. Add the settings section, and settings fields
function options_init_fn(){
	register_setting('plugin_options_contributors_box', 'plugin_options_contributors_box', 'plugin_options_validate' );
	//register_setting('plugin_options_author', 'plugin_options_author', 'plugin_options_validate' );
	add_settings_section('contributors_box_section', 'Contributors Box Settings', 'contributors_box_section', __FILE__);	
	add_settings_field('radio_buttons_contributors_box', 'Contributors Box Position', 'contributors_box_radio', __FILE__, 'contributors_box_section');	
	//add_settings_section('author_section', 'Original Author Settings', 'author_section', __FILE__);
	//add_settings_field('radio_buttons_author', 'Display Original Post Author', 'author_display_radio', __FILE__, 'author_section');
	
}
function  author_section() {
	echo '<p>Choose option whether to display Original Post Author on meta box and contributors box</p>';
}
function  contributors_box_section() {
	echo '<p>Choose option whether to display contributors box above the post content or below it</p>';
}

?>














